{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@routes/*": ["src/routes/*"],
      "@context/*": ["src/context/*"]
    }
  },
  "include": ["src/**/*"]
}
